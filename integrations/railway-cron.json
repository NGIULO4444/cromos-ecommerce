{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "cron": [
    {
      "name": "denea-sync",
      "schedule": "*/5 * * * *",
      "command": "npm run sync:api"
    },
    {
      "name": "cleanup-logs",
      "schedule": "0 2 * * *",
      "command": "npm run cleanup:logs"
    }
  ],
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "WEBHOOK_PORT": "3001"
      }
    }
  }
}
